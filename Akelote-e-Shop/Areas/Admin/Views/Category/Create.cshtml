@model Akelote_e_Shop.Areas.Admin.ViewModels.CategoryFormViewModel

@{
    ViewBag.Title = "Create category";
    ViewBag.Link = Html.ActionLink("Back to List", "List", new { page = 1 });
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="row">
                <div class="col-6">
                    @Html.LabelFor(model => model.Category.Title, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Category.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Category.Title, "", new { @class = "text-danger" })
                </div>
                <div class="col-6">
                    @Html.LabelFor(model => model.Category.Discount, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Category.Discount, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Category.Discount, "", new { @class = "text-danger" })
                </div>

            </div>
            
            <div class="row">
                
                <div class="col-6">

                    @Html.LabelFor(m => m.Category.Parent)
                    @Html.DropDownListFor(m => m.Category.ParentId, Model.Categories.Select(c => new SelectListItem { Text = c.Title, Selected = c.Id == Model.Category.ParentId, Value = c.Id.ToString() }), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Category.ParentId, "", new { @class = "text-danger" })

                </div>

            </div>

        </div>

        <div class="form-group">

            <div class="row">
                <div class="col">
                    <input type="submit" value="Create" class="btn btn-primary float-right" />

                </div>

            </div>


        </div>
    </div>
}