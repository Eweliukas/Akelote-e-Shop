@model IEnumerable<Akelote_e_Shop.Models.Item>

@{
    ViewBag.Title = "Items list";
}

@section actions
{
    @Html.ActionLink("Create", "Create", "Item", null, new { @class = "btn btn-sm btn-primary" })
}

<table class="table table-striped">
    
    <thead class="thead-dark">
    
        <tr>
            <th>Id</th>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.Category.Title)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.Discount)</th>
            <th>@Html.DisplayNameFor(model => model.Deleted)</th>
            <th>Actions</th>
        </tr>

    </thead>

    

    @foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.Id)</td>
        <td>@Html.DisplayFor(modelItem => item.Title)</td>
        <td>@Html.DisplayFor(modelItem => item.Category.Title)</td>
        <td>@Html.DisplayFor(modelItem => item.Price)</td>
        <td>@Html.DisplayFor(modelItem => item.Description)</td>
        <td>@Html.DisplayFor(modelItem => item.Discount)</td>
        <td>@Html.DisplayFor(modelItem => item.Deleted)</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
    }
    
    @if (Model.Count() == 0) {
        <tr>
            <td colspan="8">No data</td>
        </tr>
    }

</table>
