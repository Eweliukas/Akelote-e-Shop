@model IEnumerable<Akelote_e_Shop.Models.Property>

@{
    ViewBag.Title = "Properties list";
}

@section actions
{
    <div>

        @Html.ActionLink("Export Excel", "Export", "Property", null, new { @class = "btn btn-sm btn-secondary mr-2" })
        @Html.ActionLink("Create", "Create", "Property", null, new { @class = "btn btn-sm btn-primary" })

    </div>
}

<table class="table table-striped">

    <thead class="thead-dark">

        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>

    </thead>


    @foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Category.Title)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

    @if (Model.Count() == 0) {
        <tr>
            <td colspan="4">No data</td>
        </tr>
    }

</table>
